%section
  .row
    .medium-1.columns
      &nbsp;
    .medium-10.columns
      %h1
        = @topic.name
      %p
        = markdown @topic.description
      - if policy(Post.new).create?
        = link_to "Make New Post", new_topic_post_path(@topic), class: 'small radius alert button topic-button'
      - if policy(@topic).destroy?
        = link_to "Delete Topic", @topic, method: :delete, class: 'right button alert tiny topic-button', data: { confirm: "Are you sure you want to delete this topic and all realted posts?" }
      - if policy(@topic).update?
        = link_to "Edit Topic", edit_topic_path, class: 'right button tiny topic-button'
      %hr
      #posts
        = render @posts
      = will_paginate @posts
      %br
    .medium-1.columns
      &nbsp;


