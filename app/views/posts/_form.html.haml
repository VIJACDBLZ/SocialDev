.panel
  .row
    .large-11.columns.box
      = simple_form_for [topic, post], html: {class: "optional"} do |f|
        = f.label :title, required: false
        = f.full_error :title , class: "red"
        = f.text_field :title
        = f.label :body, required: false
        = f.full_error :body , class: "red"
        = f.text_area :body, rows: '15'
        - if post.image?
          = f.label "Replace image:"
          = image_tag( post.image.thumb.url )
        - else
          %small.light-small Upload image:
        = f.file_field :image, class: "input-file", id: "browse"
        -# <button type="button" class='input-btn' id='input_btn'>Browse</button>
        = f.hidden_field :image_cache
        %br
        = f.button :submit, class: "radius post-button"