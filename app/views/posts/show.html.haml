%section.single-post
  .row
    .medium-2.columns
      &nbsp;
    .medium-8.columns
      %h1
        = @post.title
      %hr/
      %p= @post.body
      %hr/
      - if policy(@post).edit?
        = link_to "Edit", edit_post_path(@post), class: 'button tiny alert'
    .medium-2.columns
      &nbsp;