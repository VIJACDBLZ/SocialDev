%section.single-post
  .row
    .medium-2.columns
      &nbsp;
    .medium-8.columns
      = render partial: 'votes/voter', locals: { post: @post }
      .post-marign
        %h1
          = @post.title
        %small.post-avatar
          = image_tag(@post.user.avatar.tiny.url) if @post.user.avatar?
        %hr/
        = image_tag(@post.image.standard.url) if @post.image?
        ~ markdown @post.body
        %hr/
        - if policy(@post).edit?
          = link_to "Edit", edit_topic_post_path(@topic, @post), class: 'button tiny'
        - if policy(@post).destroy?
          = link_to "Delete Post", [@topic, @post], method: :delete, class: 'button tiny alert right', data: { confirm: 'Are you sure you want to delete this post?'}
        - if policy(Post.new).create?
          - @comment ||= Comment.new
          = render partial: 'comments/form', locals: { post: @post, comment: @comment }
      %br
      - if @post.comments.any?
        %h5.light-header COMMENTS
        = render @post.comments, :post => @post
      - else
        %p
          No comments yet.
      %br
    .medium-2.columns
      &nbsp;